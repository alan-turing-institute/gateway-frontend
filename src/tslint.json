{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      [
        "app",
        "sim",
        "passport",
        "exception",
        "layout",
        "header"
      ],
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      [
        "app",
        "sim",
        "passport",
        "exception",
        "layout",
        "header"
      ],
      "kebab-case"
    ]
  }
}